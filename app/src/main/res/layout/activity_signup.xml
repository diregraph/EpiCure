<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nuwan.epicure.UI.signup">

    <ImageView android:src="@drawable/login_logo"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />

    <!-- First Name Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="130dip"
        android:layout_width="match_parent"
        android:id="@+id/lbl_fname"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Last Name Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/lbl_fname"
        android:layout_width="match_parent"
        android:id="@+id/lbl_lname"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Username Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/lbl_lname"
        android:layout_width="match_parent"
        android:id="@+id/lbl_username_signup"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_username_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Password Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/lbl_username_signup"
        android:layout_width="match_parent"
        android:id="@+id/lbl_password_signup"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_password_signup"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Confirm Password Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/lbl_password_signup"
        android:layout_width="match_parent"
        android:id="@+id/lbl_confirm_password_signup"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_confirm_password_signup"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/lbl_confirm_password_signup"
        android:id="@+id/btn_create"
        android:text="Create"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_create"
        android:layout_centerInParent="true"
        android:id="@+id/tv_haveAnAcc"
        android:text="Have an Account? Login Here"/>


</RelativeLayout>
