<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fragment_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nuwan.epicure.UI.signup_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        android:textSize="15sp"
        android:id="@+id/tv_email_profile"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email_profile"
        android:text="User Type"
        android:textSize="15sp"
        android:id="@+id/tv_user_type_profile"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_type_profile"
        android:text="N/A"
        android:textSize="15sp"
        android:id="@+id/tv_Reg_Number"/>


    <!-- First Name Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="60dip"
        android:layout_width="match_parent"
        android:id="@+id/lbl_fname_profile"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/input_fname_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Last Name Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/lbl_fname_profile"
        android:layout_marginTop="0dip"
        android:layout_width="match_parent"
        android:id="@+id/lbl_lname"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Password Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/lbl_lname"
        android:layout_marginTop="0dip"
        android:layout_width="match_parent"
        android:id="@+id/lbl_password_profile"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_password_profile"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <!-- Confirm Password Label and Input -->
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/lbl_password_profile"
        android:layout_marginTop="0dip"
        android:layout_width="match_parent"
        android:id="@+id/lbl_confirm_password_profile"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_confirm_password_profile"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/lbl_confirm_password_profile"
        android:layout_marginTop="30dip"
        android:id="@+id/btn_update_profile"
        android:text="Update"
        android:textSize="20sp"/>

</RelativeLayout>